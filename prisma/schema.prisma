generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Buyer{
  id          String    @id @default(uuid())
  name        String
  Orders      Order[]
}

model Supplier{
  id          String    @id @default(uuid())
  name        String
  products    Product[] @relation("ProductSupplier")
}

model Product {
  id       String   @id @default(uuid())
  price    Float
  qty       Int
  supplier Supplier[] @relation("ProductSupplier")
}

model OrderProduct {
  id        String @id @default(uuid())
  orderId   String
  productId String
  qtyBought Int
}

model Order {
  id       String    @id @default(uuid())
  buyerId  String
  Buyer    Buyer     @relation(fields: [buyerId], references: [id])
}







